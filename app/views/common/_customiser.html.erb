<div class="your-face">
  <img src="<%= @uri %>" alt="You!">
  <div class="overlay overlay-hat"></div>
  <div class="overlay overlay-eye"></div>
  <div class="overlay overlay-mouth"></div>
  <div class="overlay overlay-neck"></div>
</div>

<ul class="swoptions">
  <% ['hat', 'eye', 'mouth', 'neck'].each do |zone| %>
  <li>
    <a href="#"><%= zone.capitalize %></a>
    <div class="swatch" data-for=".overlay-<%= zone %>">
      <% Dir["app/assets/images/potatochunks/#{zone}*"].each do |url| %>
        <div class="item"><img src="<%= asset_url url.split('/')[-2..-1].join('/') %>"></div>
      <% end %>
    </div>
  </li>
  <% end %>
</ul>
